<style-scheme id="markyh" _name="MarkyH" version="1.0">
  <author>Justin Hernandez</author>
  <_description>For darkists</_description>

  <color name="gray" value="#bbbbbb"/>
  <color name="white" value="#eeeeee"/>
  <color name="yellow" value="#EDDD3D"/>
  <color name="senape" value="#acc900"/>
  <color name="lime" value="#96ff00"/>
  <color name="green" value="#00FF00"/>
  <color name="alga" value="#00c99b"/>
  <color name="aqua" value="#00d8ff"/>
  <color name="cyan" value="#66BDE3"/>
  <color name="violet" value="#9e91ff"/>
  <color name="purple" value="#AD2EFE"/>
  <color name="fuchsia" value="#ff44cc"/>
  <color name="magenta" value="#ff79d9"/>
  <color name="red" value="#ff0000"/>
  <color name="orange" value="#FF872E"/>
  <color name="ambra" value="#ff9900"/>
  <color name="asfalto" value="#555753"/>
  <color name="carbon" value="#3b3b3b"/>
  <color name="bluey" value="#272F9F"/>  
<!--    My Additions    -->
  <color name="mycolor1" value="#348B6F"/>
  <color name="mycolor2" value="#983B99"/>
  <color name="mycolor3" value="#59375F"/>

<!--
        GUI styles 
-->
  <style name="text" foreground="white" background="#black"/>
  <style name="selection" background="#3C4978"/>
  <style name="selection-unfocused" foreground="white" background="gray"/>
  <style name="cursor" foreground="white"/>
  <style name="secondary-cursor" foreground="magenta"/>
  <style name="current-line" background="carbon"/>
  <style name="line-numbers" foreground="gray" background="#black"/>
  <style name="bracket-match" foreground="#black" background="#62E17F" bold="true"/>
  <style name="bracket-mismatch" foreground="white" background="red" bold="true"/>
  <style name="search-match" foreground="#black" background="yellow"/>

<!--
        Default styles 
-->
  <style name="def:keyword" foreground="aqua" bold="true"/>
  <style name="def:statement" foreground="mycolor1"/>
  <style name="def:function" foreground="violet"/>
  <style name="def:preprocessor" foreground="fuchsia" bold="true"/>
  <style name="def:type" foreground="bluey" bold="true" />
  <style name="def:character" foreground="white"/>
  <style name="def:comment" foreground="purple" italic="true"/>
  <style name="def:number" foreground="yellow"/>
  <style name="def:string" foreground="green"/>
  <style name="def:net-address-in-comment" foreground="violet" italic="true" underline="true"/>
  <style name="def:note" foreground="white" background="fuchsia" bold="true"/>
  <style name="def:error" background="red" bold="true"/>
  <style name="def:escape" foreground="violet"/>
  <style name="def:shebang" foreground="alga" bold="true"/>
  <style name="def:doc-comment-element" italic="true"/>
  <style name="def:identifier" foreground="cyan" bold="true"/>
  <style name="def:specials" foreground="white" background="magenta"/> 
  <style name="def:variable" foreground="mycolor2"/>
  <style name="def:boolean" foreground="yellow" bold="true"/>
  <style name="def:constant" foreground="yellow"/>
  <style name="def:special-constant" foreground="fuchsia" bold="true"/>
  
  <style name="php:variable" foreground="mycolor3" bold="true" />
<!--  <style name="cpp:operator" foreground="mycolor3" bold="false" />-->
  <style name="php:keyword" foreground="bluey" bold="true"/>
  <style name="php:operator" foreground="white" />
  <style name="def:boolean" foreground="#FFC800" bold="true"/>

</style-scheme>
